@model List<Esercizio_S2_L3.Models.Ticket>;
<h1>Elenco Biglietti acquistati</h1>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Sala</th>
                <th>Tipo Biglietto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Nome</td>
                    <td>@ticket.Cognome</td>
                    <td>@ticket.Sala</td>
                    <td>@ticket.TipoBiglietto</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nessuna biglietto acquistato.</p>
}

<a asp-action="Index">Torna all'indice</a>

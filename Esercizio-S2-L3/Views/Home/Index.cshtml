@model List<Esercizio_S2_L3.Models.Sala>;

@{
    ViewData["Title"] = "Elenco Sale";
}

<h1>Elenco Sale</h1>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Capienza</th>
                <th scope="col">Biglietti Venduti</th>
                <th scope="col">Biglietti Ridotti Venduti</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sale in Model)
            {
                <tr>
                    <td>@sale.Nome</td>
                    <td>@sale.CapienzaMassima</td>
                    <td>@sale.BigliettiVendutiInteri</td>
                    <td>@sale.BigliettiVendutiRidotti</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nessuna sala disponibile.</p>
}

<a asp-action="Index">Torna all'indice</a>


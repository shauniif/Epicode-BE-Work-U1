 @{
    ViewData["Title"] = "Verifica Spedizione";
}

<h2>Verifica Spedizione</h2>

<form method="post" asp-action="VerificaLaTuaSpedizione">
    <div class="form-group">
        <label for="codiceFiscale">Codice Fiscale / Partita IVA</label>
        <input type="text" class="form-control" id="CFOrPIVA" name="CFOrPIVA" required />
    </div>
    <div class="form-group">
        <label for="numeroSpedizione">Numero di Spedizione</label>
        <input type="text" class="form-control" id="numeroSpedizione" name="numeroSpedizione" required />
    </div>
    <button type="submit" class="btn btn-primary">Verifica</button>
</form>